@model Clever_Dynamics.Models.LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <form asp-controller="Home" asp-action="Index" asp-antiforgery="true" class="loginform">
        <div>
            <label class="form-label mb-3" asp-for="Username">User Name</label>
            <input type="text" class="form-control mb-4" name="Username" />
            <input type="submit" value="submit" class="form-control btn-primary p-3" />

            <div class="mt-3">
                @Html.ValidationSummary()
            </div>

        </div>
    </form>
</div>

